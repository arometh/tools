<Context path="/sae" reloadable="true" docBase="sae" >
	<Resource   name="jdbc/saeDs"
                auth="Container" 
                type="javax.sql.DataSource" 
				factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"              
                testWhileIdle="true" 
				testOnBorrow="true" 
				testOnReturn="false"
                validationQuery="SELECT 1" 
				validationInterval="60000" 
				timeBetweenEvictionRunsMillis="10000"
                maxActive="1000" 
				maxIdle="1000" 
				minIdle="100" 
                maxWait="180000" 
                initialSize="10"
                removeAbandonedTimeout="180"              
                removeAbandoned="true"
                logAbandoned="true"
                minEvictableIdleTimeMillis="60000"               
                jmxEnabled="true"
                dbcInterceptors="org.apache.tomcat.jdbc.pool.interceptor.ConnectionState;org.apache.tomcat.jdbc.pool.interceptor.StatementFinalizer"
                username="${db.sae.username}" 
                password="${db.sae.password}" 
                driverClassName="net.sourceforge.jtds.jdbc.Driver"
                url="${db.sae.connectionURL.SAE}"/>	
		
